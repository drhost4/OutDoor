<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rental_item_card_view_margins"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/default_corner_radius"
    app:cardElevation="@dimen/default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rentalImage"
            android:layout_width="@dimen/rental_item_image_width"
            android:layout_height="@dimen/rental_item_image_height"
            android:layout_marginStart="@dimen/rental_item_image_margins"
            android:layout_marginTop="@dimen/rental_item_image_margins"
            android:layout_marginBottom="@dimen/rental_item_image_margins"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_search" />

        <TextView
            android:id="@+id/rentalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rental_item_name_start_margin"
            android:ellipsize="end"
            android:maxWidth="@dimen/rental_item_name_text_max_width"
            android:maxLines="3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/rental_item_name_text_size"
            tools:text="trailer" />

    </LinearLayout>
</androidx.cardview.widget.CardView>